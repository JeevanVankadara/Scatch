<%- include('./partials/header') %>
    <div class="w-full min-h-screen flex px-20 py-10 mt-10">
        <!-- Sidebar -->
        <div class="w-[25%] flex flex-col items-start pr-10">
            <div class="flex items-center gap-2 mb-10">
                <h3>sort by</h3>
                <form action="/shop">
                    <select class="border-[1px] px-2 py-1" name="sortby" id="">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>
            <div class="flex flex-col mb-10">
                <a class="block w-fit mb-2" href="">New Collection</a>
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Discounted Products</a>
            </div>
            <div>
                <a class="block w-fit mb-2" href="">Filter by :</a>
                <a class="block w-fit mb-2" href="">Availability</a>
                <a class="block w-fit mb-2" href="">Discount</a>
            </div>
        </div>
        
        <!-- Products Grid -->
        <div class="w-[75%]">
            <div class="grid grid-cols-4 gap-8"> <!-- Increased gap for better spacing -->
                <% products.forEach(function(product) { %>
                    <div class="flex flex-col h-72"> <!-- Fixed height for consistent sizing -->
                        <!-- Product image container -->
                        <div class="w-full h-44 flex items-center justify-center p-2" style="background-color: <%= product.bgcolor %>">
                            <% if (product.image && product.mimetype) { %>
                                <img class="max-h-36 w-auto object-contain" src="data:<%= product.mimetype %>;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                            <% } else { %>
                                <p>No image available</p>
                            <% } %>
                        </div>
                        <!-- Product info panel -->
                        <div class="flex justify-between items-center px-4 py-3 mt-2" style="background-color: <%= product.panelcolor %>; color: <%= product.textcolor %>">
                            <div>
                                <h3 class="text-sm font-medium"><%= product.name %></h3>
                                <h4 class="text-sm">â‚¹ <%= product.price %></h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white text-black" href="">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
<%- include('./partials/footer') %>
<%- include ('./partials/ownerheader') %>

<div class="w-full min-h-screen flex flex-col px-10 py-10 gap-8">
    <h1 class="text-3xl font-bold text-gray-700 mb-6">All Orders</h1>

    <!-- Active Orders Section -->
    <h2 class="text-2xl font-bold text-gray-700">Active Orders</h2>
    <% let activeOrders = orders.filter(o => !o.delivered); %>
    <% if (activeOrders.length === 0) { %>
        <p class="text-2xl text-center text-blue-500 font-semibold">
            No active orders.
        </p>
    <% } else { %>
        <% activeOrders.forEach(order => { %>
            <div class="w-full bg-white shadow-md rounded-2xl p-6 border border-gray-200">
                <!-- Order Header -->
                <div class="flex justify-between items-center border-b pb-3 mb-4">
                    <h2 class="text-lg font-semibold text-gray-700">Order #<%= order._id %></h2>
                    <h3 class="text-green-600 font-bold">₹ <%= order.totalCost %></h3>
                </div>

                <!-- Product List -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <% order.products.forEach(prod => { %>
                        <div class="flex gap-4 items-center border rounded-lg p-3">
                            <img class="h-20 w-20 object-contain rounded-md border"
                                 src="data:<%= prod.mimetype %>;base64,<%= prod.image.toString('base64') %>"
                                 alt="<%= prod.name %>">
                            <div>
                                <h4 class="font-medium text-gray-700"><%= prod.name %></h4>
                                <p class="text-sm text-gray-500">₹ <%= prod.price %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <!-- User Details -->
                <div class="mb-4 p-3 bg-gray-50 rounded-md border">
                    <h4 class="text-gray-700 font-semibold">Customer Details</h4>
                    <p><strong>Name:</strong> <%= order.user.fullname %></p>
                    <p><strong>Email:</strong> <%= order.user.email %></p>
                    <p><strong>Address:</strong> <%= order.user.address %></p>
                </div>

                <!-- Order Tracking -->
                <div class="mt-6">
                    <h4 class="text-gray-700 font-semibold mb-2">Update Order Status</h4>
                    <div class="flex gap-3">
                        <!-- Shipped button -->
                        <form action="/orders/update/<%= order._id %>?step=shipped" method="POST">
                            <button class="px-4 py-2 rounded-lg 
                                <%= order.shipped ? 'bg-green-500 text-white' : 'bg-gray-300' %>"
                                <%= order.shipped ? 'disabled' : '' %>>
                                Shipped
                            </button>
                        </form>

                        <!-- Out for Delivery button -->
                        <form action="/orders/update/<%= order._id %>?step=outforDelivery" method="POST">
                            <button class="px-4 py-2 rounded-lg 
                                <%= order.outforDelivery ? 'bg-green-500 text-white' : 'bg-gray-300' %>"
                                <%= (!order.shipped || order.outforDelivery) ? 'disabled' : '' %>>
                                Out for Delivery
                            </button>
                        </form>

                        <!-- Delivered button -->
                        <form action="/orders/update/<%= order._id %>?step=delivered" method="POST">
                            <button class="px-4 py-2 rounded-lg 
                                <%= order.delivered ? 'bg-green-500 text-white' : 'bg-gray-300' %>"
                                <%= (!order.shipped || !order.outforDelivery || order.delivered) ? 'disabled' : '' %>>
                                Delivered
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } %>

    <!-- Delivered Orders Section -->
    <h2 class="text-2xl font-bold text-gray-700 mt-12">Delivered Orders</h2>
    <% let deliveredOrders = orders.filter(o => o.delivered); %>
    <% if (deliveredOrders.length === 0) { %>
        <p class="text-lg text-center text-gray-500">
            No delivered orders yet.
        </p>
    <% } else { %>
        <% deliveredOrders.forEach(order => { %>
            <div class="w-full bg-gray-50 shadow-md rounded-2xl p-6 border border-gray-200 opacity-90">
                <!-- Order Header -->
                <div class="flex justify-between items-center border-b pb-3 mb-4">
                    <h2 class="text-lg font-semibold text-gray-700">Order #<%= order._id %></h2>
                    <h3 class="text-green-600 font-bold">₹ <%= order.totalCost %></h3>
                </div>

                <!-- Product List -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <% order.products.forEach(prod => { %>
                        <div class="flex gap-4 items-center border rounded-lg p-3 bg-white">
                            <img class="h-20 w-20 object-contain rounded-md border"
                                 src="data:<%= prod.mimetype %>;base64,<%= prod.image.toString('base64') %>"
                                 alt="<%= prod.name %>">
                            <div>
                                <h4 class="font-medium text-gray-700"><%= prod.name %></h4>
                                <p class="text-sm text-gray-500">₹ <%= prod.price %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <!-- User Details -->
                <div class="mb-4 p-3 bg-gray-50 rounded-md border">
                    <h4 class="text-gray-700 font-semibold">Customer Details</h4>
                    <p><strong>Name:</strong> <%= order.user.fullname %></p>
                    <p><strong>Email:</strong> <%= order.user.email %></p>
                    <p><strong>Address:</strong> <%= order.user.address %></p>
                </div>

                <!-- Status -->
                <div class="mt-4 text-green-600 font-semibold">
                    ✅ Delivered
                </div>
            </div>
        <% }) %>
    <% } %>
</div>

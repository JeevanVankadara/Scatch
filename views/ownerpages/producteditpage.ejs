<%- include('../partials/ownerheader') %>

<% if(success && success.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-10 py-20 flex flex-grow">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/owners/allproducts">All Products</a>
                <a class="block w-fit mb-2" href="/products/create">Create new product</a>
            </div>
        </div>
        <main class="w-3/4 bg-white p-8 shadow ml-4">
            <h2 class="text-xl font-bold mb-4">Edit Product</h2>
            <form autocomplete="off" action="/owners/editproduct/<%= product._id %>" method="post">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <% if (product.image && product.mimetype) { %>
                            <img class="max-h-36 w-auto object-contain rounded border" 
                                 src="data:<%= product.mimetype %>;base64,<%= product.image.toString('base64') %>" 
                                 alt="<%= product.name %>">
                        <% } else { %>
                            <p>No image available</p>
                        <% } %>
                        <!-- No file upload input here -->
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block mb-1 font-medium">Product Name</label>
                            <input name="name" type="text" placeholder="Product Name"
                                class="border p-2 rounded w-full" value="<%= product.name %>">
                        </div>
                        <div>
                            <label class="block mb-1 font-medium">Product Price</label>
                            <input name="price" type="text" placeholder="Product Price"
                                class="border p-2 rounded w-full" value="<%= product.price %>">
                        </div>
                        <div>
                            <label class="block mb-1 font-medium">Discount Price</label>
                            <input name="discount" type="text" placeholder="Discount Price"
                                class="border p-2 rounded w-full" value="<%= product.discount %>">
                        </div>
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block mb-1 font-medium">Background Color</label>
                            <input name="bgcolor" type="text" placeholder="Background Color"
                                class="border p-2 rounded w-full" value="<%= product.bgcolor %>">
                        </div>
                        <div>
                            <label class="block mb-1 font-medium">Panel Color</label>
                            <input name="panelcolor" type="text" placeholder="Panel Color"
                                class="border p-2 rounded w-full" value="<%= product.panelcolor %>">
                        </div>
                        <div>
                            <label class="block mb-1 font-medium">Text Color</label>
                            <input name="textcolor" type="text" placeholder="Text Color"
                                class="border p-2 rounded w-full" value="<%= product.textcolor %>">
                        </div>
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-yellow-500 text-white" type="submit"
                    value="Update Product">
            </form>
        </main>
    </div>
</div>
